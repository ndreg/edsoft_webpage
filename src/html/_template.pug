block config
  include _variables
  
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{page_title} | #{actual_page}
    link(rel="stylesheet" href="../styles/style.css")
  body
    block header
      include ./organisms/_header
    main.main 
      block main
    block footer
      include ./organisms/_footer